{
  "name": "resource-monitor",
  "displayName": "Resource Monitor",
  "description": "A simple resource monitor.",
  "version": "1.0.0",
  "publisher": "chneau",
  "license": "MIT",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "keywords": [
    "performance",
    "resource",
    "resources",
    "monitor",
    "memory",
    "cpu",
    "io",
    "network",
    "disk",
    "storage"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chneau/vscode-resource-monitor"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/main.js",
  "scripts": {
    "esbuild-base": "esbuild ./src/main.ts --outfile=out/main.js",
    "build": "npm run esbuild-base -- --bundle --external:vscode --platform=node --minify",
    "watch": "npm run esbuild-base -- --format=cjs --watch"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "esbuild": "^0.15.3",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "printWidth": 999999
  },
  "dependencies": {
    "systeminformation": "^5.12.5"
  }
}
