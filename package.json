{
  "name": "resource-monitor",
  "displayName": "Resource Monitor",
  "description": "A simple resource monitor.",
  "version": "1.0.2",
  "publisher": "chneau",
  "license": "MIT",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "keywords": [
    "performance",
    "resource",
    "resources",
    "monitor",
    "memory",
    "cpu",
    "io",
    "network",
    "disk",
    "storage"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chneau/vscode-resource-monitor"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/main.js",
  "scripts": {
    "build": "esbuild ./src/main.ts --outfile=out/main.js --bundle --external:vscode --platform=node --minify",
    "watch": "npm run build -- --watch",
    "update": "npx npm-check-updates@latest --upgrade && npm update",
    "check": "tsc --noEmit --skipLibCheck",
    "format": "npx prettier@latest --cache --write . --ignore-path .gitignore"
  },
  "dependencies": {
    "pretty-bytes": "^6.1.0",
    "systeminformation": "^5.18.7"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.18.12",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "printWidth": 1e+99
  }
}
